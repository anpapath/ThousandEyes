{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Create a ThousandEyes Test",
            "size": "Large",
            "wrap": true,
            "weight": "Bolder",
            "style": "heading"
        },
        {
            "type": "Input.ChoiceSet",
            "id": "interval",
            "label": "Interval",
            "isRequired": true,
            "errorMessage": "This is a required input",
            "placeholder": "in seconds",
            "choices": [
                {
                    "title": "120",
                    "value": "120"
                },
                {
                    "title": "300",
                    "value": "300"
                },
                {
                    "title": "600",
                    "value": "600"
                },
                {
                    "title": "900",
                    "value": "900"
                },
                {
                    "title": "1800",
                    "value": "1800"
                },
                {
                    "title": "3600",
                    "value": "3600"
                }
            ]
        },
        {
            "type": "Input.Number",
            "placeholder": "Input the source Agent Id",
            "id": "said",
            "label": "Source Agent Id",
            "isRequired": true,
            "errorMessage": "This is a required field"
        },
        {
            "type": "Input.Number",
            "placeholder": "Input the agent id of another source agent ",
            "id": "said_2",
            "label": "Source Agent id (optional)",
            "value": 1
        },
        {
            "type": "Input.Number",
            "placeholder": "Input the target agent id",
            "id": "taid",
            "label": "Target Agent Id",
            "isRequired": true,
            "errorMessage": "This is a required field"
        },
        {
            "type": "Input.Text",
            "placeholder": "Name your test",
            "id": "test_name",
            "label": "Test Name"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "TCP",
                    "value": "TCP"
                },
                {
                    "title": "UDP",
                    "value": "UDP"
                }
            ],
            "placeholder": "TCP or UDP",
            "id": "proto",
            "label": "Protocol"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Create my test!",
            "data": {
                "callback_keyword": "createtest"
            }
        }
    ]
}